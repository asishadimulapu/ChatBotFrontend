# Frontend Environment Variables (example)
# Copy this to .env and fill in real values. Do NOT commit your actual .env.

# API base URL for the backend
REACT_APP_API_URL=https://your-backend.example.com/api

# App metadata
REACT_APP_APP_NAME=ChatBot AI
REACT_APP_VERSION=1.0.0

# Clerk (publishable key is safe client-side, but don't commit real values if you prefer)
REACT_APP_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key

# Dev server flags (optional)
GENERATE_SOURCEMAP=false
FAST_REFRESH=true
WDS_SOCKET_HOST=localhost
CHOKIDAR_USEPOLLING=false
DANGEROUSLY_DISABLE_HOST_CHECK=true

# Node options
NODE_OPTIONS=--no-deprecation
